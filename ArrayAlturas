using System;

namespace Quest√£o2
{
    class Program
    {
        static void Main(string[] args)
        {
            float[] height = new float[3];
            for (int i = 0; i < height.Length; i++)
            {
                Console.WriteLine("Write a height: ");
                height[i] = float.Parse(Console.ReadLine());
            }
            Console.Clear();
            Console.WriteLine("The heights is: ");
            foreach (float size in height)
            {
                Console.WriteLine("\n" + size);
            }

        }
    }
}
