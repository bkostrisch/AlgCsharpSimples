using System;

namespace Exercício2
{
    class Program
    {
        static void Main(string[] args)
        {
            int a, b, c, d, e, f;
            Console.WriteLine("Digite um número: ");
            a = int.Parse(Console.ReadLine());
            Console.WriteLine("Digite outro número: ");
            b = int.Parse(Console.ReadLine());
            c = a + b; d = a - b; e = a * b; f = a / b;
            Console.WriteLine("A soma dos dois números é: {0}", c);
            Console.WriteLine("A subtração dos dois números é: {0}", d);
            Console.WriteLine("A multiplicação dos dois números é: {0}", e);
            Console.WriteLine("A divisão dos dois números é: {0}", f);
            Console.ReadKey();
        
        }
    }
}
